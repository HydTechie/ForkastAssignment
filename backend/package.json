{
  "name": "orderbook-backend",
  "version": "1.0.0",
  "description": "Orderbook backend (Express + Postgres)",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "start:dev": "nodemon --watch 'src/**/*.js' --exec \"node\" src/app.js",
    "migrate": "psql -h $DATABASE_HOST -p $DATABASE_PORT -U $DATABASE_USER -d $DATABASE_NAME -f migrations/initial.sql",
    "test": "jest",
    "debug": "nodemon --inspect=0.0.0.0:9229 src/app.js",

    "dev": "next dev -p 8000",
    "build": "next build"
  
  
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "pg": "^8.11.0",
    "uuid": "^9.0.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "jest": "^29.6.1",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4"
  }
}
